
<div class="pagination" align="left" >
	<%= will_paginate @users%>
	<br />
	<br />
	<br />
	
	<ul class="users">
		<% @users.each do |user| %>
		<li>
			<%= gravatar_for user, :size => 30  %>
			<br/>
			<%= link_to user.name, user %>
			<hr />
			<br />
		</li>
		<% end %>

	</ul>
	<%= will_paginate @users %>
	
</div>